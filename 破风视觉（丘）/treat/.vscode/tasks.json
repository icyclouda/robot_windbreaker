{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: g++ 生成活动文件",
        "command": "/usr/bin/g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "--std=c++17",
          "-I", "/usr/local/include",
          "-I", "/usr/local/opencv4/include/opencv4",
          "-L", "/usr/local/lib",
          "-L", "/usr/local/opencv4/lib",
          "-l", "opencv_core",
          "-l", "opencv_imgproc",
          "-l", "opencv_imgcodecs",
          "-l", "opencv_video",
          "-l", "opencv_ml",
          "-l", "opencv_highgui",
          "-l", "opencv_objdetect",
          "-l", "opencv_flann",
          "-l", "opencv_imgcodecs",
          "-l", "opencv_photo",
          "-l", "opencv_videoio"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "调试器生成的任务。"
      }
    ],
    "version": "2.0.0"
  }
  